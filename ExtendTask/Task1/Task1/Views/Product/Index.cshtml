@model List<Task1.Models.Entity.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<a herf="/Product/Create" class="btn btn-primary">Add Product</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ProductId</th>
            <th>ProductName</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.ProductId</td>
                <td>@v.ProductName</td>
                <td>@v.Price</td>
                <td>@v.Quantity</td>
                <td>@v.Description</td>
                <td>
                    <a herf="/Product/Update?id=@v.ProductId" class="btn btn-info">Update Product</a>
                    <a herf="/Product/Delete?id=@v.ProductId" class="btn btn-danger">Delete Product</a>
                    <a herf="/Product/ViewInfo?id=@v.ProductId" class="btn btn-success">View Information</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>